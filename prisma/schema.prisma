// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(uuid())
  taxPayerRegistry String    @unique
  email            String
  name             String
  password         String
  Company          Company[]
}

model Address {
  id       String    @id @default(uuid())
  zipcode  String?
  street   String?
  number   String?
  district String?
  Company  Company[]
  Client   Client[]
}

model Company {
  id                 String    @id @default(uuid())
  representativeId   String
  addressId          String?
  registrationNumber String    @unique
  companyName        String
  tradingName        String?
  phone              String?
  email              String?
  user               User      @relation(fields: [representativeId], references: [id])
  address            Address?  @relation(fields: [addressId], references: [id])
  Service            Service[]
}

model Client {
  id                 String    @id @unique @default(uuid())
  isCompany          Boolean   @default(true)
  name               String?
  taxPayerRegistry   String?
  registrationNumber String?
  companyName        String?
  tradingName        String?
  phone              String?
  email              String?
  addressId          String?
  address            Address?  @relation(fields: [addressId], references: [id])
  Project            Project[]
}

model Service {
  id              String            @id @unique @default(uuid())
  companyId       String
  description     String
  value           Decimal
  createdAt       DateTime          @default(now())
  company         Company           @relation(fields: [companyId], references: [id])
  ProjectServices ProjectServices[]
}

model Project {
  id              String            @id @unique @default(uuid())
  clientId        String
  name            String
  description     String?
  client          Client            @relation(fields: [clientId], references: [id])
  ProjectServices ProjectServices[]
}

model ProjectServices {
  id        String  @id @unique @default(uuid())
  projectId String
  serviceId String
  value     Decimal
  qty       Int     @default(1)

  project Project @relation(fields: [projectId], references: [id])
  service Service @relation(fields: [serviceId], references: [id])
}
